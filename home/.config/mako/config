# ~/.config/mako/config

# Behavior
default-timeout=5000
ignore-timeout=1
max-visible=3
#sort=-time
history=1

# Placement & layer
anchor=top-right
layer=overlay

# Sizing & spacing
width=360
margin=10,10,10,10
padding=10,12

# Dark, subtle, semi-transparent
background-color=#1e1e1ECC
text-color=#ECEFF4FF
border-size=1
border-color=#00000066
border-radius=12

# Font
font=Inter 10

# Icons
icons=1
max-icon-size=48
icon-location=left
icon-border-radius=8

# Progress bar color (drawn over bg so it shows on translucent bg)
progress-color=over #A3BE8CFF

# Formatting
# %s = summary (title), %b = body, %g = group size
markup=1
format=<b>%s</b>\n%b

# Urgency-specific tweaks
[urgency=critical]
border-color=#BF616AFF
background-color=#3B1E22E6
default-timeout=8000

[urgency=low]
background-color=#1B1D1EEF
text-color=#C0C5CEFF

