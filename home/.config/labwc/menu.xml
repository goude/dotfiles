<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="root-menu" label="LabWC">

    <item label="Terminal">
      <action name="Execute">
        <command><![CDATA[
          kitty
        ]]></command>
      </action>
    </item>

    <item label="Chromium">
      <action name="Execute">
        <command><![CDATA[
          chromium
        ]]></command>
      </action>
    </item>

    <separator/>

    <menu id="quick-tiles" label="Window Layout">
      <item label="Left Half (Super+←)">
        <action name="SnapToEdge" direction="left"/>
      </item>
      <item label="Right Half (Super+→)">
        <action name="SnapToEdge" direction="right"/>
      </item>
      <item label="Top / Maximize (Super+↑)">
        <action name="SnapToEdge" direction="up"/>
      </item>
      <item label="Bottom (Super+↓)">
        <action name="SnapToEdge" direction="down"/>
      </item>
      <separator/>
      <item label="Fullscreen (Super+F)">
        <action name="ToggleFullscreen"/>
      </item>
      <item label="Close (Super+Q)">
        <action name="Close"/>
      </item>
    </menu>

    <menu id="screenshots" label="Screenshots">
      <item label="Full Screen (Print)">
        <action name="Execute">
          <command><![CDATA[
            grim "$HOME/Pictures/screenshot-$(date +%F_%H-%M-%S).png"
          ]]></command>
        </action>
      </item>
      <item label="Select Area (Shift+Print)">
        <action name="Execute">
          <command><![CDATA[
            sh -c 'slurp | xargs -I{} grim -g {} /tmp/shot.png && swappy -f /tmp/shot.png'
          ]]></command>
        </action>
      </item>
    </menu>

    <menu id="audio-bt" label="Audio &amp; Bluetooth">
      <item label="Volume Control">
        <action name="Execute">
          <command><![CDATA[
            pavucontrol
          ]]></command>
        </action>
      </item>
      <item label="Bluetooth Manager">
        <action name="Execute">
          <command><![CDATA[
            blueman-manager
          ]]></command>
        </action>
      </item>
    </menu>

    <separator/>

    <menu id="system" label="System">
      <item label="Reconfigure (Super+Esc)">
        <action name="Reconfigure"/>
      </item>

      <separator/>

      <item label="Reboot">
        <action name="Execute">
          <command><![CDATA[
            systemctl reboot
          ]]></command>
        </action>
      </item>
      <item label="Power Off">
        <action name="Execute">
          <command><![CDATA[
            systemctl poweroff
          ]]></command>
        </action>
      </item>
    </menu>

  </menu>
</openbox_menu>

