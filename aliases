
# protective aliases
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# basic aliases
if ls --color >/dev/null 2>&1; then
  alias ls='ls --color'
else
  alias ls='ls -G' 2>/dev/null || alias ls='ls'
fi
alias df='df -h'
alias ..='cd ..'
alias ...='cd ../..'
alias ta='tmux attach || tmux new'
alias n='nvim'

# git aliases
alias gs='git status'
alias ga='git add'
alias gca='git commit -a'
alias gp='git push'

# system shortcuts
alias sau='sudo apt update && sudo apt upgrade -y'

# homeshick aliases
alias ho='homeshick'
alias hocd='homeshick cd'

# short form aliases - watch out for collisions with existing commands
alias n='nvim'
alias k='kubectl'
alias mgs='mgitstatus ~/repos ~/.homesick/repos'

# grepping aliases
alias esi='env | grep -i $1'
alias hsi='history | grep -i $1'

# tmux aliases
alias ta='tmux attach || tmux new'
alias clp='tmux split-window && exit'
alias tlk='tmux kill-session -a && tmux kill-server'

# misc aliases
alias serve-directory='python3 -m http.server'
alias sud='save "minor edit/housekeeping activity"'
alias rgi='rg -Li'
#alias pbcopy='xclip -in'
#alias pbpaste='xclip -out'
#alias cat='bat'
